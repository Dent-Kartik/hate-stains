.trypage-v2 {
  display: flex;
  flex-direction: column;


  .video-section{
  .video-section-title{
      font-weight: 700;
      font-size: 32px;
      line-height: 35px;
      text-align: center;
  }
  .video-section-inner{
      margin-top:85px;
      max-width: 1200px;
      margin: 0 auto;
    
      @include for-tablet-landscape {
          margin-top: 10px;
      }

    .flickity-viewport {
      @include for-phone {
         width: 100%;
      }
    }
.flickity-button:focus {
    outline: none;
    box-shadow: 0 0 0 5px black;
}
    .one-half {
      display: flex;
      justify-content: center;
      align-items: center;


      @include for-phone {
        width: 100%;
      }
    }
    
      flex-direction: row;
      .video-wrapper {
        padding-bottom: 0px;
        max-width: 400px;
        overflow: initial;
        
        video {
          width: 400px;
          height: 550px;
          position: relative;
          object-fit: cover;
          @include for-tablet-landscape {
              width: 250px;
              height: 250px;
          }
          @include for-tablet-portrait {
              width: 250px;
              height: 375px;
          }

        }
      }
      .video-wrapper:last-child{
        @include for-tablet-landscape {
            margin-top:  5px;
        }
      }
      .video-wrapper:before {
        content: '';
        width: 100%;
        height: 100%;
        background-color: #C6E3EE;
        position: absolute;
        z-index: -1;
        top: 28px;
        left: 28px;
      }
      .shopify-section{
        padding: 50px 0;
        @include for-tablet-landscape {
          margin-left: -14px;
        }
      }
      @include for-tablet-landscape {
          flex-direction: column;
          align-items:center;
      }
  }  
}
